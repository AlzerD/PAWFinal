<!DOCTYPE html>
<html>
<head>
  <title>PAW</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
 
<% flash.each do |name, msg| %>
<%= content_tag :div, msg, :id => "flash_#{name}" %>
<br />
<% end %>  
  
  
  <div class= " col-md-1 text-center">
  <% if current_user %>
    <div>
      <h4>Logged in as: <%= current_user.username %> <br/><br/><br/>
      </h4>
    </div>
  <div>
    
    
    <%= link_to "Home", home_path, :id => "open-contacts-dialog-btn", :class => "btn-large btn-primary", :method => :get %>  
  
    <%= link_to "Account Settings", account_settings_path, :id => "open-contacts-dialog-btn", :class => "btn-large btn-primary", :method => :get %>    
    
    <%= link_to "Sign Out", signed_out_path, :id => "open-contacts-dialog-btn", :class => "btn-large btn-primary", :method => :get %>

    
  <% else %>
    <%= link_to "Sign Up", new_user_path, :id => "btn1 btn-large btn-primary", :class => "btn1 btn-large btn-primary", :method => :get %>
    <%= link_to "Sign In", sign_in_path, :id => "open-contacts-dialog-btn", :class => "btn2 btn-large btn-primary", :method => :get %>
  <% end %>
   
  <% if (current_page?('/instructions')&&(current_user)) %>
 
  <% else %>
    <%= link_to "How To Play", instructions_path, :id => "open-contacts-dialog-btn", :class => "btn2 btn-large btn-primary", :method => :get %> 
  <% end %>
  </div>
  </div>
  
  
  
  

<div class= " col-md-1 text-center">  
  <%= yield %>
</div>
  
</body>
</html>
